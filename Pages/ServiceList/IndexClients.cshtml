@page
@model CarServiceClients.Pages.ServiceList.IndexClientsModel
@{
   ViewData["Title"] = "Klienci";
}

<div class="fotoHeader">
   <br />
   <h2 class="textHeader align-content-center">Lista klientów</h2>
   <br />
</div>

<div class="container col-3 p-5">
   <a asp-page="UpsertClient" class="btn btn-info form-control text-white">+ Dodaj nowego klienta</a>
</div>

<div class="container row" style="width: 100%; padding-right: 10px; padding-left: 10px; margin-right: auto; margin-left: auto;">

   <br /><br /><br />
   <div class="col-12 border p-3">
      <table id="DT_Load_Clients" class="table table-striped table-bordered" style="width:100%">
         <thead>
            <tr>
               <th>Nazwa klienta</th>
               <th>Rozliczony</th>
               <th>Telefon</th>
               <th>Mail</th>
               <th></th>
            </tr>
         </thead>
      </table>
   </div>
</div>

@section Scripts{
   <script src="~/js/clientsList.js"></script>
   <script src="~/js/delete.js"></script>
}

